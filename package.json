{
  "name": "@lepion/mcp-server-specnavigator",
  "version": "0.1.0",
  "description": "MCP server for navigating Model Context Protocol specifications with dynamic markdown tree generation",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "dev": "tsx watch src/index.ts",
    "start": "node dist/index.js",
    "lint": "eslint src/**/*.ts",
    "format": "prettier --write src/**/*.ts",
    "test": "jest"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "specification",
    "navigation",
    "markdown"
  ],
  "author": "Lepion",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kayaozkur/mcp-server-specnavigator.git"
  },
  "attribution": {
    "original": "https://github.com/modelcontextprotocol/modelcontextprotocol",
    "description": "Based on the Model Context Protocol specification"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.6.0",
    "axios": "^1.7.2",
    "marked": "^12.0.0",
    "node-cache": "^5.1.2",
    "unified": "^11.0.4",
    "remark-parse": "^11.0.0",
    "remark-stringify": "^11.0.0",
    "mdast-util-toc": "^7.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "eslint": "^8.54.0",
    "jest": "^29.7.0",
    "prettier": "^3.1.0",
    "tsx": "^4.6.0",
    "typescript": "^5.3.0"
  }
}